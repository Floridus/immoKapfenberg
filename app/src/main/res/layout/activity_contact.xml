<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itm.immokapfenberg.Contact">

    <TextView
        android:text="Kontakt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="68dp"
        android:id="@+id/contact"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_marginTop="144dp"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginStart="17dp"
        android:id="@+id/email"
        android:layout_marginTop="17dp"
        android:text="E-Mail"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Betreff"
        android:ems="10"
        android:id="@+id/subject"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/info"
        android:text="Weitere Informationen"
        android:layout_below="@+id/subject"
        android:layout_alignStart="@+id/subject"
        android:layout_marginTop="18dp" />

    <Button
        android:text="Senden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Abbrechen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/send"
        android:layout_alignStart="@+id/info"
        android:id="@+id/cancel" />

    <include layout="@layout/menu_bar"
        android:layout_alignBaseline="@+id/contact"
        android:layout_alignBottom="@+id/contact"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:text="0664 12345678"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:layout_alignStart="@+id/contact"
        android:id="@+id/number" />

</RelativeLayout>
