<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Bürogebäude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:id="@+id/textView5"
        android:elegantTextHeight="false"
        android:width="190dp"
        android:textSize="30dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginStart="0dp"
        android:layout_marginTop="6dp"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:text="Informationen:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="50dp"
        android:layout_marginStart="0dp"
        android:id="@+id/Informationen"
        android:layout_alignEnd="@+id/imageView"
        android:textSize="25dp"/>
    <TextView
        android:text="Preis:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="80dp"
        android:layout_marginStart="0dp"
        android:id="@+id/Preis"
        android:layout_alignEnd="@+id/imageView"
        android:textSize="25dp"/>
    <TextView
        android:text="Quadratmeter:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="105dp"
        android:layout_marginStart="0dp"
        android:id="@+id/Quadratmeter"
        android:layout_alignEnd="@+id/imageView"
        android:textSize="25dp"/>
    <TextView
        android:text="Zimmer:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="130dp"
        android:layout_marginStart="0dp"
        android:id="@+id/Zimmer"
        android:layout_alignEnd="@+id/imageView"
        android:textSize="25dp"/>
    <TextView
        android:text="Adresse: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="155dp"
        android:layout_marginStart="0dp"
        android:id="@+id/Adresse"
        android:layout_alignEnd="@+id/imageView"
        android:textSize="25dp"/>
    <TextView
        android:text="Parkplätze: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="180dp"
        android:layout_marginStart="0dp"
        android:id="@+id/Parkplätze"
        android:layout_alignEnd="@+id/imageView"
        android:textSize="25dp"/>


    <RatingBar
        android:id="@+id/rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"
        android:layout_marginTop="390dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:text="Vergleichen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb"
        android:layout_alignStart="@+id/Informationen"
        android:id="@+id/Vergleichen"
        android:onClick="kontaktieren"
        tools:textSize="26sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="160dp"/>

    <Button
        android:text="Kontakt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Kontakt"
        android:onClick="kontaktieren"
        tools:textSize="50sp"
        android:layout_alignBaseline="@+id/Vergleichen"
        android:layout_alignBottom="@+id/Vergleichen"
        android:layout_alignStart="@+id/Parkplätze" />

    <ImageSwitcher
        android:id="@+id/imageSwitcher1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <include layout="@layout/menu_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

